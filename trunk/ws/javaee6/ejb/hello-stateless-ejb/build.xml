<project name="hello-stateless-ejb" default="all" basedir=".">

    <property name="is.ejb-jar.module" value="true"/>
    <property name="javadoc.packagenames" value="enterprise.hello_stateless_ejb"/>

    <import file="../../../bp-project/main.xml"/>

    <!-- to get the test client to run when the user runs the project from inside NB -->
    <target name="post-run-deploy">
        <subant target="run">
            <fileset dir="hello-stateless-client" includes="build.xml"/>
        </subant>
    </target>

    <!-- to get the test client to run when the user runs the project from ant -->
    <target name="launch">
        <subant target="run">
            <fileset dir="hello-stateless-client" includes="build.xml"/>
        </subant>
    </target>

    <target name="-post-clean">
        <subant target="clean">
            <fileset dir="hello-stateless-client" includes="build.xml"/>
        </subant>
    </target>

    <target name="-post-dist">
        <subant target="compile">
            <fileset dir="hello-stateless-client" includes="build.xml"/>
        </subant>
    </target>

