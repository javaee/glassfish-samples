<project name="automatic-timer-ejb-test" default="runtest" basedir=".">


    <import file="../../../../bp-project/test.xml"/>

    <path id="classpath">
        <pathelement path="${build.classes.dir}"/>
        <pathelement path="${build.classes.dir}/../../../build/ejb-embedded.jar"/>
        <pathelement path="${javaee.home}/lib/embedded/glassfish-embedded-static-shell.jar"/>
        <path refid="test.classpath"/>
    </path>

    <target name="runtest" depends="compile">
	<echo message="Running the test..." />
	<java classname="org.junit.runner.JUnitCore" fork="on">
		<arg value="ejb.embedded.client.SimpleEjbTest"/>
		<classpath refid="classpath"/>
	</java>
    </target>

</project>
